pipeline {
    agent any
        
    stages {
        def mvnHome = tool name: 'localMaven', type: 'maven'

        stage ('Compile Stage') {
            steps{
                sh "${mvnHome}/bin/mvn package"
            }
        }
    
        stage ('Testing Stage') {
            steps {
                withMaven(maven : 'localMaven')  {
                    sh 'mvn test'
                }
            }
        }

        stage ('Package Stage') {
            steps {
                withMaven(maven : 'localMaven') {
                    sh 'mvn Package'
                }
            }
        }

        stage ('Artifact Stage'){
            steps {
                 archive '**/*.war'
            }
           
        }

        
    }
}