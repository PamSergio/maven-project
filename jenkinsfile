pipeline {
    agent any

    environment {
        mvnHome = tool name: 'localMaven', type: 'maven'
        //Define mvnHome as tool for maven
    }

    stages {
        stage ('Compile Stage') {
            steps {
                sh "${mvnHome}/bin/mvn package"
            } 
        }

        stage ('Artifact Stage'){
            steps {
                 archiveArtifacts '**/*.war'
            }
           
        }

        
    }
}