pipeline {
    agent any

    environment {
        mvnHome = tool name: 'localMaven', type: 'maven'
    }
    stages {
        stage ('Compile Stage') {
            //def mvnHome = tool name: 'localMaven', type: 'maven'
            steps {
                sh "${mvnHome}/bin/mvn package"
            } 
        }

        stage ('Testing Stage') {
            steps {
                withMaven(maven : 'localMaven')  {
                    sh 'mvn test'
                }
            }
        }

        stage ('Package Stage') {
            steps {
                withMaven(maven : 'localMaven') {
                    sh 'mvn Package'
                }
            }
        }

        stage ('Artifact Stage'){
            steps {
                 archive '**/*.war'
            }
           
        }

        
    }
}